<div class="row">
  <div class="medium-8 small-centered columns app">
    <%= form_for(person, url: {action: 'update'}, method: "put", remote: true) do |p| %>
      <div id="errors">
        <%= render("shared/error_messages", object: person) %>
      </div>

      <%= hidden_field_tag 'host_id', host_id %>
      <div class="row">
        <div class="small-12 small-centered columns">
          <p><%= welcome_message %></p>
      <div class="row">
        <div class="small-12 small-centered columns name-field">
            <%= p.text_field 'first_name', placeholder: "First Name" %>
        </div>
      </div>
      <div class="row">
        <div class="small-12 small-centered columns name-field">
            <%= p.text_field 'last_name', placeholder: "Last Name" %>
        </div>
      </div>
      <div class="row">
        <div class="small-12 small-centered columns email-field">
            <%= p.text_field 'email', :placeholder=>'Email Address' %>
        </div>
      </div>
      <div class="row">
        <div class="small-12 small-centered columns email-field">
          <% if person.home_zip %>
            <%= p.text_field 'home_zip', :placeholder=>'Home ZIP / Post code', required: "" %>
          <% else %>
            <%= p.text_field 'home_zip', :placeholder=>'Home ZIP / Post code' %>
          <% end %>
        </div>
      </div>
      
      <div class="row">
        <div class="small-4 columns email-field">
            <%= p.text_field 'phone_number', :placeholder=>'Phone' %>
        </div>
        <div class="small-4 columns email-field">
            <%= p.text_field 'work_phone_number', :placeholder=>'Work Phone' %>
        </div>
        <div class="small-4 columns email-field">
            <%= p.text_field 'mobile', :placeholder=>'Mobile' %>
        </div>
      </div>

      <div class="row">
        <div class="small-12 small-centered columns email-field">
          <%= button_tag(type: "submit", class: "no-style check-login") do %>
              <span class="lnr lnr-arrow-right-circle"></span>
          <% end %>
        </div>
      </div>

    <% end %>
  </div>
</div>