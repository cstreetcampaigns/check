<%= form_for(person, url: {action: 'create'} ) do |p| %>
  <% if person.errors.any? %>
  <%= render("shared/error_messages", object: person) %>
  <% end %>

  <div class="row">
    <div class="medium-6 columns name-field">
        <%= p.text_field 'first_name', placeholder: "First Name" %>
      </label>
    </div>
    <div class="medium-6 columns name-field">
        <%= p.text_field 'last_name', placeholder: "Last Name" %>
      </label>
    </div>
  </div>
  <div class="row">
    <div class="medium-4 columns email-field">
        <%= p.text_field 'email', :placeholder=>'Email Address' %>
      </label>
    </div>
  </div>

  <%= p.submit 'Check In', class:'button' %>

<% end %>