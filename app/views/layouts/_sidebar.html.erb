<div class="container sidebar">

  <% if !current_user %>
    <div class="sidebar-header"></div>
    <div class="sidebar-filler1 sidebar-filler"></div>
    <div class="sidebar-filler2 sidebar-filler"></div>
  <% end %>

  <% if current_user %>
      <% if current_user.nation.name.include?("columbia") %>
      <div class="sidebar-header logged-in" style="background-image: linear-gradient(37deg, #6AABDC 37%, #A3D5F0 100%)" >
        <%= link_to(image_tag(asset_path("logo_caa.svg"), class: "desktop-logo"), root_path) %>
      <% else %>
      <div class="sidebar-header logged-in" style="background-image:linear-gradient(13deg, #65CCEE 0%, #9DAAD7 100%);" >
        <%= link_to(image_tag(asset_path("logo.svg"), class: "desktop-logo"), root_path) %>
      <% end %>
      <div class="refresh">
        <%= link_to(image_tag(asset_path("Icon/Refresh/White.svg")), "#") %>
        <small>Refresh</small>
      </div>
    </div>
    <div class="sidebar-main">
      <%= render 'events/landing' %>
    </div>
  <% end %>

</div>
