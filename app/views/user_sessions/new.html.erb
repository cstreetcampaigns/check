<style media="screen">
  html {
    background-image: linear-gradient(50deg, #65CCEE 0%, #9DAAD7 100%);
  }
</style>
<% if @loading && @loading == true %>
  <%= render "layouts/check_sync" %>
<% end %>

<div class="container login-container">

  <div class="login-logo">
    <%= image_tag "logo" %>
  </div>

  <%= bootstrap_form_tag url: user_sessions_path do |f| %>
    <%= f.email_field :email %>
    <%= f.password_field :password %>
    <%= f.submit "Log in", class: "btn-primary navy login-btn" %>
  <% end %>
  <small><%= link_to("Forgot your password?", new_password_reset_path) %></small>

</div>
