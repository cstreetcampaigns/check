<style media="screen">
  html {
    background-image: linear-gradient(50deg, #65CCEE 0%, #9DAAD7 100%);
  }
</style>

<%= render "layouts/check_sync" %>

<div class="container login-container">
  <% if flash[:alert] %>
    <div class="notice"><%= flash[:alert] %></div>
  <% end %>
  <div class="login-logo">
    <%= image_tag(asset_path("logo.svg")) %>
  </div>

  <%= bootstrap_form_tag url: user_sessions_path do |f| %>
    <%= f.email_field :email %>
    <%= f.password_field :password %>
    <%= f.submit "Log in", class: " btn btn-primary navy login-btn" %>
  <% end %>
  <small><%= link_to("Forgot your password?", new_password_reset_path) %></small>

</div>
