<% @page = "choose_event" %>
<div class="container events">

  <div class="current_events">
    <% if !@current_events.empty? %>
      <% @current_events.each do |month| %>
        <% month.each do |event| %>
          <% if event.class != String %>
            <%= link_to set_event_path(event_id: event[0]["id"]), class: "list-item", method: :get do %>
              <div class="event">
                <div class="word-wrapper">
                  <%= event[0]["name"] %>
                  <div class="event_date"><%= event[0]["start_time"].to_datetime.to_formatted_s(:long) %></div>
                </div>
              </div>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    <% else %>
      <div class="no-events text-center">
        <p>No events found.</p>
        <%= link_to("Select another site", landing_path) %>
      </div>
    <% end %>
  </div>

  <% if !@past_events.empty? %>
    <div class="past_events">
      <div class="list-separator">
        Past Events
      </div>
      <% @past_events.each do |month| %>
        <% month.each do |event| %>
          <% if event.class != String %>
            <%= link_to set_event_path(event_id: event[0]["id"]), class: "list-item", method: :get do %>
              <div class="event">
                <div class="word-wrapper">
                  <%= event[0]["name"] %>
                  <div class="event_date"><%= event[0]["start_time"].to_datetime.to_formatted_s(:long) %></div>
                </div>
              </div>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
