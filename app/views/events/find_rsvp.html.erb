<h3>Search for RSVP:</h3>

<%= form_tag({controller: 'events', action: 'find_person'}, method: 'get', data: {abide: ''}) do %>
  <div class="row">
    <div class="medium-6 columns name-field">
      <label>First Name <small>required</small>
        <%= text_field_tag 'first_name', nil, :required => true, :pattern => "[a-zA-Z]+" %>
      </label>
    </div>
    <div class="medium-6 columns name-field">
      <label>Last Name <small>required</small>
        <%= text_field_tag 'last_name', nil, :required => true, :pattern => "[a-zA-Z]+" %>
      </label>
    </div>
  </div>
  <div class="row">
    <div class="medium-4 columns email-field">
      <label>Email <small>required</small>
        <%= text_field_tag 'email', nil, :placeholder=>'example@example.com', :required => true, :pattern => "user_email" %>
      </label>
      <small class="error">Email is required.</small>
    </div>
    <div class="medium-4 columns">
      <label for="phone">Phone
        <%= text_field_tag 'phone'%>
      </label>
    </div>
    <div class="medium-4 columns">
      <label for="mobile">Mobile Phone
        <%= text_field_tag 'mobile' %>
      <label>
    </div>
  </div>
  <%= hidden_field_tag 'event_id', @event['id'] %>
  <%= submit_tag 'Search', class:'button' %>
<% end%>