<div class="container">
  <div class="search">
    <input type="text" name="search" value="" id="datatable-search">
      <i class="fa fa-search" aria-hidden="true"></i>
    </input>
  </div>
  <% @letters.each do |letter| %>
    <div class="letter-separator">
      <%= letter %>
    </div>
    <% @rsvps.each do |rsvp| %>
      <% if rsvp.person.last_name[0].upcase == letter %>
          <%= render 'rsvp', rsvp: rsvp, letter: letter %>
      <% end %>
    <% end %>
  <% end %>

</div>
