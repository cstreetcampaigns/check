<% if @rsvps.size > 0 %>
  <div id="header">
    <p><%= @current_event.name %></p>
    <p><%= @current_event.to_local_time %></p>
    <p id="attending">
      <%= render('attending', attending: @attending, total: @total) %>
    </p>
  </div>

  <table id="list" role="grid">
    <thead>
      <tr  style="display:none">
        <th scope="column">Name</th>
      </tr>
    </thead>

    <tfoot style="display:none">
      <tr>
        <th>Name</th>
      </tr>
    </tfoot>

    <tbody>
      <% @rsvps.each do |r| %>
        <tr>
          <td>
            <%= render('rsvp_row', r: r) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% else %>
  <h3>No RSVPs in this event. <%= link_to "Refresh your list.", rsvps_cache_path, class: "to-cache" %></h3>
<% end %>