<div id="rsvp-choices">
  <div class="row">
    <div class="small-6 centered columns">
      <%= link_to "#", class:"add", data: { host_id: nil } do %>
      <span class="lnr lnr-plus-circle"></span> Add a Guest
      <% end %>
    </div>
    <div class="small-6 centered columns">
      <div class="search">
        <div class="overlay"><span class="lnr lnr-magnifier"></span><span class="text">Search</span></div>
        <input type="search" id="datatable-search">
      </div>
    </div>
  </div>
</div>

<% if @rsvps.size > 0 %>
  <div id="header">
    <p><%= @current_event.name %></p>
    <p><%= @current_event.to_local_time %></p>
    <p id="attending">
      <%= render('attending', attending: @attending, total: @total) %>
    </p>
   <%#= link_to 'Delete RSVPS',  { action: :destroy, controller: 'events', id: @current_event.id }, method: :delete, data: { confirm: 'Are you sure? This will delete ALL event rsvps and their +1 associations.' } %>
  </div>

  <table id="list" role="grid">
    <thead>
      <tr  style="display:none">
        <th scope="column">Name</th>
      </tr>
    </thead>

    <tfoot style="display:none">
      <tr>
        <th>Name</th>
      </tr>
    </tfoot>

    <tbody>
      <% @rsvps.each do |r| %>
        <tr>
          <td>
            <%= render('rsvp_row', r: r) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>

<div class="teal-box">
  <div class="row">
    <div class="medium-8 small-centered columns">
      <%= link_to(rsvps_cache_path, class: "to-cache") do %>
        <p>No RSVPs found.</p>
        <p>Would you like to sync with NationBuilder? <span class="lnr lnr-arrow-right"></span></p>
      <% end %>
    </div>
  </div>
</div>
<% end %>