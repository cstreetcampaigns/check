<h3 class="check-title">Choose a new password</h3>
<%= form_for @user, :url => password_reset_path(@token), :html => {:method => :put} do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <input type="text" value="<%=@user.email %>" readonly >
  </div>
  <div class="field">
    <%= f.password_field :password, placeholder:"Password" %>
  </div>
  <div class="field">
    <%= f.password_field :password_confirmation, placeholder:"Password Confirmation" %>
  </div>
  <%= button_tag(type: "submit", class: "no-style check-login") do %>
      <span class="lnr lnr-arrow-right-circle"></span>
  <% end %>
<% end %>
