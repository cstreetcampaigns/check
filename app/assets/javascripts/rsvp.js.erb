$(document).ready(function() {
  // initializeSyncRsvpList();

  $('.checkin').on('click', function(e) {
    e.preventDefault();
    e.stopPropagation();
    var url = '/rsvps/check_in';
    $.ajax({
      type: "POST",
      url: url,
      dataType: 'script',
      data: {
        'id': $(this).data('id'),
        'attended': true
      }
    });
  });

  $('.checkout').on('click', function(e) {
    e.preventDefault();
    e.stopPropagation();
    var url = '/rsvps/check_out';
    $.ajax({
      type: "POST",
      url: url,
      dataType: 'script',
      data: {
        'id': $(this).data('id'),
        'attended': false
      }
      });
    });

})



