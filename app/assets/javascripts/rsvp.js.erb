$(document).ready(function() {
  // initializeSyncRsvpList();

  $('.container').on('click', '.checkin', function(e){
    e.preventDefault();
    e.stopPropagation();
    var url = '/rsvps/check_in';
    $.ajax({
      type: "POST",
      url: url,
      dataType: 'script',
      data: {
          'id': $(this).data('id'),
          'attended': true
        }
    });
  });

  $('.container').on('click', '.checkout', function(e){
    e.preventDefault();
    e.stopPropagation();
    var url = '/rsvps/check_out';
    $.ajax({
      type: "POST",
      url: url,
      dataType: 'script',
      data: {
          'id': $(this).data('id'),
          'attended': false
        }
    });
  });

  $('header').on('click', '.refresh', function(e){
    e.preventDefault();
    e.stopPropagation();
    var url = '/sync';
    $.ajax({
      type: "GET",
      url: url
    });
  });

})

