$(document).ready(function() {
  // initializeSyncRsvpList();

  $('#search').on("input", function(e){
    e.preventDefault();
    e.stopPropagation();
    var url = '/rsvps';
    var q = $('#search').serialize()
    $.get(url, q, function(html) {
      $('#rsvp-results').html(html)
    })
  });

  $('html').on('click', '.checkin', function(e){
    e.preventDefault();
    e.stopPropagation();
    var id = $(this).data('id');
    // $(this).hide();
    $('#load-ani-'+id).show();
    var url = '/rsvps/check_in';
    $.ajax({
      type: "POST",
      url: url,
      dataType: 'script',
      data: {
          'id': $(this).data('id'),
          'attended': true
        }
    });
  });

  $('html').on('click', '.checkout', function(e){
    e.preventDefault();
    e.stopPropagation();
    var id = $(this).data('id');
    // $(this).hide();
    $('#load-ani-'+id).show();
    var url = '/rsvps/check_out';
    $.ajax({
      type: "POST",
      url: url,
      dataType: 'script',
      data: {
          'id': $(this).data('id'),
          'attended': false
        }
    });
  });

  $('header').on('click', '.refresh', function(e){
    e.preventDefault();
    e.stopPropagation();
    var url = '/sync';
    $.ajax({
      type: "GET",
      url: url
    });
  });

  $('.container').on('click', '.rsvp-name', function(e){
    e.preventDefault();
    e.stopPropagation();
    var url = this.attributes.href.value
    var desktop = true;
    $.get(url, function(html) {
      $('.rsvp-show-card').html(html);
      $('.rsvp-show-card').show();
      $('.rsvp-name').removeClass("black");
      $('a[href="' + url + '"]').addClass("black");
      $("html, body").animate({ scrollTop: 0 }, "slow");
    });
  });

  $('.container').on('click', '.guests a', function(e){
    e.preventDefault();
    e.stopPropagation();
    if (this.classList.contains("new-ticket")) {
      var url = this.attributes.href.value
      $.get(url, function(html) {
        $('.rsvp-show-card').html(html);
        $("html, body").animate({ scrollTop: 0 }, "slow");
      });
    } else {
      var url = this.attributes.href.value
      $.get(url, function(html) {
        $('.rsvp-show-card').html(html);
        $("html, body").animate({ scrollTop: 0 }, "slow");
      });
    }
  });

  $('.container').on('click', '.rsvp-show-close', function(e){
    $('.rsvp-show-card').hide();
    $('.rsvp-name').removeClass("black");
  });

})

